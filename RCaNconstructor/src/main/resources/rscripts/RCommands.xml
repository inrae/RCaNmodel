        <condition>
            sampled
        </condition>
        <rcompute>
            gelman &lt;- gelman.diag(SAMPLE$mcmc[,FLUX[YEAR]])
            resultR &lt;- gelman
        </rcompute>
        <table>
            yes
        </table>
        <help>
            Gelman diagnostic for a given flux and a given year (package coda).
        </help>
        <parameter>
            <parameter>
                FLUX[YEAR]
            </parameter>
        </parameter>
    </rcommand>
