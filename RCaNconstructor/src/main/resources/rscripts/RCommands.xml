        <condition>
            built
        </condition>
        <rcompute>
            status &lt;-  checkPolytopeStatus(POLYTOPE)
            resultR &lt;-  status
        </rcompute>
        <table>
            yes
        </table>
        <help>
             This commands checks that the polytope is bounded and not empty.
        </help>
        <!--  CHECKED -->
    </rcommand>
